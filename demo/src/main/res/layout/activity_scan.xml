<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_framing_rect_height="300dp"
        app:zxing_framing_rect_width="300dp"
        app:zxing_possible_result_points="@android:color/holo_blue_bright"
        app:zxing_result_view="@android:color/holo_green_light"
        app:zxing_use_texture_view="true"
        app:zxing_viewfinder_laser="@android:color/holo_orange_dark"
        app:zxing_viewfinder_mask="@android:color/holo_purple" />
</LinearLayout>
